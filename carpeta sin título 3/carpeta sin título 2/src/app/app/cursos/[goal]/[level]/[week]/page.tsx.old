import fs from "node:fs";
import path from "node:path";
import Link from "next/link";

const GOALS = ["emailing", "llamadas", "reuniones"] as const;
const LEVELS = ["a1", "a2", "b1", "b2", "c1", "c2"] as const;

type Goal = (typeof GOALS)[number];
type Level = (typeof LEVELS)[number];

type PageProps = {
  params: Promise<{ goal: string; level: string; week: string }>;
  searchParams?: Promise<Record<string, string | string[]>>;
};

function loadExercises(goal: string, level: string, week: string) {
  const p = path.join(process.cwd(), `src/content/cursos/${goal}/${level}/${week}/exercises.json`);
  const raw = fs.readFileSync(p, "utf8");
  return JSON.parse(raw);
}

function toOne(v: string | string[] | undefined) {
  return Array.isArray(v) ? v[0] : v;
}

function anchorize(s: string) {
  return s.toLowerCase().replace(/\s+/g, "-").replace(/[^a-z0-9\-]/g, "");
}

export default async function WeekPage({ params, searchParams }: PageProps) {
  const { goal: goalRaw, level: levelRaw, week } = await params;
  const sp = (await searchParams) ?? {};
  const filterType = toOne(sp.type); // fillBlanks | multipleChoice | reorder | errorCorrection | undefined

  const goal = goalRaw as Goal;
  const level = levelRaw as Level;

  if (!GOALS.includes(goal) || !LEVELS.includes(level)) {
    return (
      <main className="mx-auto max-w-[980px] px-4 py-12">
        <h1 className="text-2xl font-black">Curso no encontrado</h1>
        <Link className="mt-4 inline-block text-violet-700 font-black" href="/">
          Volver a Home →
        </Link>
      </main>
    );
  }

  let data: any;
  try {
    data = loadExercises(goal, level, week);
  } catch {
    return (
      <main className="mx-auto max-w-[980px] px-4 py-12">
        <h1 className="text-2xl font-black">Semana no encontrada</h1>
        <p className="mt-2 text-slate-600">
          No existe contenido para <b>{goal}/{level}/{week}</b>.
        </p>
        <div className="mt-6 flex flex-wrap gap-3">
          <Link className="font-black text-violet-700" href={`/app/cursos/${goal}/${level}`}>
            ← Volver al nivel
          </Link>
          <Link className="font-black text-violet-700" href="/">
            Volver a Home →
          </Link>
        </div>
      </main>
    );
  }

  const items = Array.isArray(data.items) ? data.items : [];

  const counts = items.reduce((acc: any, it: any) => {
    const k = it.type || "unknown";
    acc[k] = (acc[k] || 0) + 1;
    // por track si existe
    if (it.track) {
      acc[`track:${it.track}`] = (acc[`track:${it.track}`] || 0) + 1;
    }
    return acc;
  }, {});

  const byType: Record<string, any[]> = {
    fillBlanks: items.filter((x: any) => x.type === "fillBlanks"),
    multipleChoice: items.filter((x: any) => x.type === "multipleChoice"),
    reorder: items.filter((x: any) => x.type === "reorder"),
    errorCorrection: items.filter((x: any) => x.type === "errorCorrection"),
  };

  const typesOrder = ["fillBlanks", "multipleChoice", "reorder", "errorCorrection"] as const;

  const visibleTypes = filterType && byType[filterType] ? [filterType] : [...typesOrder];

  const typeLabels: Record<string, string> = {
    fillBlanks: "Fill Blanks (emails)",
    multipleChoice: "Multiple Choice",
    reorder: "Reorder",
    errorCorrection: "Error Correction",
  };

  const typeBadges: Record<string, string> = {
    fillBlanks: "bg-violet-100 text-violet-900",
    multipleChoice: "bg-blue-100 text-blue-900",
    reorder: "bg-amber-100 text-amber-900",
    errorCorrection: "bg-emerald-100 text-emerald-900",
  };

  return (
    <main className="mx-auto max-w-[980px] px-4 py-10">
      <div className="flex flex-wrap items-center justify-between gap-3">
        <div>
          <div className="text-[12px] font-extrabold text-slate-500">
            App / Cursos / {goal} / {level.toUpperCase()} / {week}
          </div>
          <h1 className="mt-2 text-3xl font-black tracking-tight text-slate-900">
            {goal.toUpperCase()} — {level.toUpperCase()} · {week}
          </h1>
          <p className="mt-2 text-slate-600">
            Vista completa del contenido (4 tipos). Puedes filtrar por tipo.
          </p>
        </div>

        <div className="flex flex-wrap gap-2">
          <Link
            href={`/app/cursos/${goal}/${level}`}
            className="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-200 bg-white px-5 text-sm font-black text-slate-800 hover:bg-slate-50"
          >
            ← Volver al nivel
          </Link>
          <Link
            href="/"
            className="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-200 bg-white px-5 text-sm font-black text-slate-800 hover:bg-slate-50"
          >
            ← Volver a Home
          </Link>
        </div>
      </div>

      {/* Resumen */}
      <div className="mt-6 grid gap-3 md:grid-cols-2">
        <div className="rounded-3xl border border-slate-200 bg-white p-5">
          <div className="text-sm font-black text-slate-900">Resumen</div>
          <div className="mt-3 flex flex-wrap gap-2 text-xs font-extrabold text-slate-600">
            {typesOrder.map((t) => (
              <span key={t} className={`rounded-full px-3 py-1 ${typeBadges[t]}`}>
                {typeLabels[t]}: {byType[t].length}
              </span>
            ))}
            {"track:core" in counts ? (
              <span className="rounded-full bg-slate-100 px-3 py-1">core: {counts["track:core"]}</span>
            ) : null}
            {"track:extension" in counts ? (
              <span className="rounded-full bg-slate-100 px-3 py-1">extension: {counts["track:extension"]}</span>
            ) : null}
          </div>
        </div>

        <div className="rounded-3xl border border-slate-200 bg-white p-5">
          <div className="text-sm font-black text-slate-900">Filtros rápidos</div>
          <div className="mt-3 flex flex-wrap gap-2">
            <Link className="rounded-2xl border border-slate-200 bg-white px-4 py-2 text-sm font-black hover:bg-slate-50"
              href={`/app/cursos/${goal}/${level}/${week}`}
            >
              Ver TODO
            </Link>
            {typesOrder.map((t) => (
              <Link
                key={t}
                className="rounded-2xl border border-slate-200 bg-white px-4 py-2 text-sm font-black hover:bg-slate-50"
                href={`/app/cursos/${goal}/${level}/${week}?type=${t}`}
              >
                {typeLabels[t]}
              </Link>
            ))}
          </div>
          <p className="mt-3 text-xs text-slate-500">
            Nota: esta vista muestra contenido “tal cual” (ideal para revisión). Luego se puede hacer modo alumno (pregunta a pregunta).
          </p>
        </div>
      </div>

      {/* Índice (anchors) */}
      <div className="mt-8 rounded-3xl border border-slate-200 bg-white p-5">
        <div className="text-sm font-black text-slate-900">Índice</div>
        <div className="mt-3 flex flex-wrap gap-2">
          {visibleTypes.map((t) => (
            <a
              key={t}
              href={`#${anchorize(t)}`}
              className="rounded-full bg-slate-100 px-3 py-1 text-xs font-extrabold text-slate-700 hover:bg-slate-200"
            >
              {typeLabels[t]} ({byType[t].length})
            </a>
          ))}
        </div>
      </div>

      {/* Secciones por tipo */}
      <div className="mt-10 space-y-10">
        {visibleTypes.map((t) => (
          <section key={t} id={anchorize(t)} className="scroll-mt-24">
            <div className="flex items-end justify-between gap-3">
              <h2 className="text-2xl font-black tracking-tight text-slate-900">
                {typeLabels[t]}
              </h2>
              <a href="#top" className="text-sm font-black text-violet-700 hover:underline">
                Subir ↑
              </a>
            </div>

            <div className="mt-4 space-y-4">
              {byType[t].map((it: any) => (
                <article key={it.id} className="rounded-3xl border border-slate-200 bg-white p-6">
                  <div className="flex flex-wrap items-center justify-between gap-2">
                    <div className="text-xs font-extrabold text-slate-500">
                      {it.type} · {it.id} {it.track ? `· ${it.track}` : ""}
                    </div>
                    {it.meta?.functions ? (
                      <div className="flex flex-wrap gap-1">
                        {(it.meta.functions || []).slice(0, 4).map((f: string) => (
                          <span key={f} className="rounded-full bg-violet-50 px-2 py-1 text-[11px] font-black text-violet-800">
                            {f}
                          </span>
                        ))}
                      </div>
                    ) : null}
                  </div>

                  {/* Render por tipo */}
                  {it.type === "fillBlanks" ? (
                    <>
                      <pre className="mt-4 whitespace-pre-wrap rounded-2xl bg-slate-950 p-4 text-sm text-slate-50">
{it.text}
                      </pre>
                      <div className="mt-3 text-xs text-slate-500">
                        Huecos: {(String(it.text).match(/____/g) || []).length} · choices: {Array.isArray(it.choices) ? it.choices.length : 0}
                      </div>
                    </>
                  ) : it.type === "multipleChoice" ? (
                    <>
                      <div className="mt-4 font-semibold text-slate-900">{it.prompt}</div>
                      <ul className="mt-3 grid gap-2 text-sm">
                        {(it.options || []).map((op: string, idx: number) => (
                          <li key={idx} className="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2">
                            {op}
                          </li>
                        ))}
                      </ul>
                      <div className="mt-3 text-xs text-slate-500">
                        (Modo revisión) Respuesta correcta: {typeof it.answerIndex === "number" ? it.answerIndex : "—"}
                      </div>
                    </>
                  ) : it.type === "reorder" ? (
                    <>
                      <div className="mt-4 text-sm text-slate-700">
                        (Modo revisión) Mostrando estructura completa del item:
                      </div>
                      <pre className="mt-3 whitespace-pre-wrap rounded-2xl bg-slate-100 p-4 text-sm text-slate-800">
{JSON.stringify(it, null, 2)}
                      </pre>
                    </>
                  ) : it.type === "errorCorrection" ? (
                    <>
                      <div className="mt-4 text-sm text-slate-700">
                        (Modo revisión) Mostrando estructura completa del item:
                      </div>
                      <pre className="mt-3 whitespace-pre-wrap rounded-2xl bg-slate-100 p-4 text-sm text-slate-800">
{JSON.stringify(it, null, 2)}
                      </pre>
                    </>
                  ) : (
                    <pre className="mt-4 whitespace-pre-wrap rounded-2xl bg-slate-100 p-4 text-sm text-slate-800">
{JSON.stringify(it, null, 2)}
                    </pre>
                  )}
                </article>
              ))}
            </div>
          </section>
        ))}
      </div>

      <div className="mt-12 text-center text-xs text-slate-500">
        <Link href="/" className="font-black text-violet-700 hover:underline">
          Volver a Home
        </Link>
      </div>
    </main>
  );
}
