          "interaction_id": "U5_Ta1-u5-time_I0",
          "title": "Telling the Time Practice",
          "instructions": "Choose the correct answer for each question.",
          "questions": [
            {
              "id": "q1",
              "question": "What time is it when the clock shows 3:00?",
              "options": [
                "A) Three o'clock",
                "B) Half past three",
                "C) Quarter to three",
                "D) Three thirty"
              ],
              "correctAnswer": "A",
              "explanation": "La expresión 'Three o'clock' se usa cuando la hora es exactamente en punto, como 3:00."
            },
            {
              "id": "q2",
              "question": "It's 4:15. How do you say this time?",
              "options": [
                "A) Quarter past four",
                "B) Four o'clock",
                "C) Half past four",
                "D) Quarter to four"
              ],
              "correctAnswer": "A",
              "explanation": "'Quarter past four' significa que son las 4:15, porque un cuarto de hora ha pasado desde las 4:00."
            },
            {
              "id": "q3",
              "question": "How do you say 5:30 in words?",
              "options": [
                "A) Five o'clock",
                "B) Half past five",
                "C) Quarter to five",
                "D) Five fifteen"
              ],
              "correctAnswer": "B",
              "explanation": "'Half past five' significa que son las 5:30, ya que media hora ha pasado desde las 5:00."
            },
            {
              "id": "q4",
              "question": "If it's 7:45, what's the correct way to say the time?",
              "options": [
                "A) Seven thirty",
                "B) Quarter to eight",
                "C) Eight o'clock",
                "D) Half past seven"
              ],
              "correctAnswer": "B",
              "explanation": "'Quarter to eight' significa que faltan 15 minutos para las 8:00, o sea, son las 7:45."
            }
          ],
          "mastery_tag": "vocabulary"
