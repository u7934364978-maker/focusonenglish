  "title": "Atención al Cliente Básica",
  "items": [
    { "id": "fin-a1-w22-1", "type": "multipleChoice", "prompt": "What is 'cliente' in English?", "options": ["Customer", "Assistant", "Manager", "Service"], "answerIndex": 0, "explanation": "Cliente is 'customer'." },
    { "id": "fin-a1-w22-2", "type": "multipleChoice", "prompt": "___ I help you?", "options": ["Can", "Are", "Is", "Do"], "answerIndex": 0, "explanation": "'Can I help you?' is a standard service greeting." },
    { "id": "fin-a1-w22-3", "type": "multipleChoice", "prompt": "Please wait in the ___.", "options": ["queue", "desk", "bank", "app"], "answerIndex": 0, "explanation": "Customers wait in a queue or line." },
    { "id": "fin-a1-w22-4", "type": "multipleChoice", "prompt": "___ you sign here, please?", "options": ["Could", "Are", "Do", "Is"], "answerIndex": 0, "explanation": "We use 'Could' for polite requests." },
    { "id": "fin-a1-w22-5", "type": "multipleChoice", "prompt": "Thank you very much. - ___.", "options": ["You're welcome", "Please", "Excuse me", "Hello"], "answerIndex": 0, "explanation": "'You're welcome' is the response to thank you." },
    { "id": "fin-a1-w22-6", "type": "fillBlanks", "prompt": "[blank] me, where is the manager?", "answers": ["Excuse"], "explanation": "Excuse me is used to get attention." },
    { "id": "fin-a1-w22-7", "type": "fillBlanks", "prompt": "Could you [blank] a moment?", "answers": ["wait"], "explanation": "Could you wait a moment?" },
    { "id": "fin-a1-w22-8", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "How can I help you", "explanation": "Question word + Modal + Subject + Verb?" },
    { "id": "fin-a1-w22-9", "type": "multipleChoice", "prompt": "The assistant is behind the ___.", "options": ["counter", "queue", "customer", "ID"], "answerIndex": 0, "explanation": "Assistants work behind the counter." },
    { "id": "fin-a1-w22-10", "type": "multipleChoice", "prompt": "___ to the bank!", "options": ["Welcome", "Goodbye", "Please", "Excuse"], "answerIndex": 0, "explanation": "Welcome is used to greet people arriving." },
    { "id": "fin-a1-w22-11", "type": "fillBlanks", "prompt": "Please [blank] here.", "answers": ["sign"], "explanation": "Common bank instruction." },
    { "id": "fin-a1-w22-12", "type": "reorder", "prompt": "Reorder the request:", "sentence": "Could I see your ID", "explanation": "Modal + Subject + Verb + Possessive + Noun." },
    { "id": "fin-a1-w22-13", "type": "multipleChoice", "prompt": "Wait for your ___.", "options": ["turn", "line", "assistant", "service"], "answerIndex": 0, "explanation": "We wait for our turn in a queue." },
    { "id": "fin-a1-w22-14", "type": "multipleChoice", "prompt": "Is the ___ happy?", "options": ["customer", "service", "help", "queue"], "answerIndex": 0, "explanation": "Customers can be happy or unhappy with service." },
    { "id": "fin-a1-w22-15", "type": "fillBlanks", "prompt": "Thank you for your [blank].", "answers": ["help"], "explanation": "Thank you for your help." },
    { "id": "fin-a1-w22-16", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "You are very welcome", "explanation": "Subject + Verb + Adverb + Adjective." },
    { "id": "fin-a1-w22-17", "type": "multipleChoice", "prompt": "___ you speak slower?", "options": ["Could", "Are", "Is", "Do"], "answerIndex": 0, "explanation": "Polite request for speed." },
    { "id": "fin-a1-w22-18", "type": "multipleChoice", "prompt": "I need some ___.", "options": ["help", "helping", "helps", "to help"], "answerIndex": 0, "explanation": "'Help' as a noun." },
    { "id": "fin-a1-w22-19", "type": "fillBlanks", "prompt": "Could [blank] help me?", "answers": ["you"], "explanation": "Could you help me?" },
    { "id": "fin-a1-w22-20", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "Wait in the line", "explanation": "Verb + Preposition + Article + Noun." },
    { "id": "fin-a1-w22-21", "type": "multipleChoice", "prompt": "The ___ is long today.", "options": ["queue", "customer", "help", "sign"], "answerIndex": 0, "explanation": "A queue can be long." },
    { "id": "fin-a1-w22-22", "type": "multipleChoice", "prompt": "Can I have your ___?", "options": ["ID", "queue", "wait", "welcome"], "answerIndex": 0, "explanation": "ID is identification." },
    { "id": "fin-a1-w22-23", "type": "fillBlanks", "prompt": "Have a [blank] day!", "answers": ["nice"], "explanation": "Common polite closing." },
    { "id": "fin-a1-w22-24", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "Please sit down here", "explanation": "Adverb + Verb + Particle + Adverb." },
    { "id": "fin-a1-w22-25", "type": "multipleChoice", "prompt": "___ you repeat that?", "options": ["Could", "Do", "Are", "Is"], "answerIndex": 0, "explanation": "Polite request to repeat." },
    { "id": "fin-a1-w22-26", "type": "multipleChoice", "prompt": "The service is ___.", "options": ["good", "yellow", "tall", "under"], "answerIndex": 0, "explanation": "Service can be good or bad." },
    { "id": "fin-a1-w22-27", "type": "fillBlanks", "prompt": "[blank] you later.", "answers": ["See"], "explanation": "See you later." },
    { "id": "fin-a1-w22-28", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "Thank you for waiting", "explanation": "Verb + Pronoun + Preposition + Verb-ing." },
    { "id": "fin-a1-w22-29", "type": "multipleChoice", "prompt": "I am a bank ___.", "options": ["assistant", "queue", "welcome", "please"], "answerIndex": 0, "explanation": "Assistant is a job title." },
    { "id": "fin-a1-w22-30", "type": "multipleChoice", "prompt": "Excuse me, where is the ___?", "options": ["exit", "customer", "please", "sign"], "answerIndex": 0, "explanation": "Asking for the exit." },
    { "id": "fin-a1-w22-31", "type": "fillBlanks", "prompt": "I am [blank] sorry.", "answers": ["so"], "explanation": "I am so sorry (apology)." },
    { "id": "fin-a1-w22-32", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "Can I see it", "explanation": "Modal + Subject + Verb + Object?" },
    { "id": "fin-a1-w22-33", "type": "multipleChoice", "prompt": "___ I see your passport?", "options": ["Could", "Am", "Is", "Do"], "answerIndex": 0, "explanation": "Polite request for documents." },
    { "id": "fin-a1-w22-34", "type": "multipleChoice", "prompt": "The bank is ___.", "options": ["busy", "blue", "hungry", "cold"], "answerIndex": 0, "explanation": "Busy means many people are there." },
    { "id": "fin-a1-w22-35", "type": "fillBlanks", "prompt": "One [blank], please.", "answers": ["moment"], "explanation": "One moment, please." },
    { "id": "fin-a1-w22-36", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "The assistant is busy", "explanation": "Article + Noun + Verb + Adjective." },
    { "id": "fin-a1-w22-37", "type": "multipleChoice", "prompt": "___ to meet you.", "options": ["Nice", "Well", "How", "Who"], "answerIndex": 0, "explanation": "Nice to meet you." },
    { "id": "fin-a1-w22-38", "type": "multipleChoice", "prompt": "Is the queue ___?", "options": ["moving", "eating", "talking", "sleeping"], "answerIndex": 0, "explanation": "Queues move as people are served." },
    { "id": "fin-a1-w22-39", "type": "fillBlanks", "prompt": "[blank] you again.", "answers": ["Tell"], "explanation": "Wait, no. Maybe 'Help you again'." },
    { "id": "fin-a1-w22-40", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "Could you help me", "explanation": "Modal + Subject + Verb + Object?" },
    { "id": "fin-a1-w22-41", "type": "multipleChoice", "prompt": "I need help with my ___.", "options": ["account", "sign", "welcome", "please"], "answerIndex": 0, "explanation": "Common request: help with an account." },
    { "id": "fin-a1-w22-42", "type": "multipleChoice", "prompt": "___ name, please.", "options": ["Your", "You", "Me", "I"], "answerIndex": 0, "explanation": "Possessive adjective 'your'." },
    { "id": "fin-a1-w22-43", "type": "fillBlanks", "prompt": "Nice to [blank] you.", "answers": ["meet"], "explanation": "Nice to meet you." },
    { "id": "fin-a1-w22-44", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "What is the problem", "explanation": "Question word + Verb + Article + Noun?" },
    { "id": "fin-a1-w22-45", "type": "multipleChoice", "prompt": "I am here to ___.", "options": ["help", "helping", "helped", "helps"], "answerIndex": 0, "explanation": "Infinitive after 'to'." },
    { "id": "fin-a1-w22-46", "type": "multipleChoice", "prompt": "The ___ is at the door.", "options": ["customer", "service", "please", "sign"], "answerIndex": 0, "explanation": "Customers enter through the door." },
    { "id": "fin-a1-w22-47", "type": "fillBlanks", "prompt": "Could [blank] repeat that?", "answers": ["you"], "explanation": "Could you repeat that?" },
    { "id": "fin-a1-w22-48", "type": "reorder", "prompt": "Reorder the sentence:", "sentence": "Have a good day", "explanation": "Verb + Article + Adjective + Noun." },
    { "id": "fin-a1-w22-49", "type": "multipleChoice", "prompt": "Please ___ the form.",
      "options": ["complete", "buy", "pay", "cost"], "answerIndex": 0, "explanation": "We complete forms." },
    { "id": "fin-a1-w22-50", "type": "multipleChoice", "prompt": "We are ___ to help.", "options": ["happy", "blue", "cold", "fast"], "answerIndex": 0, "explanation": "Polite expression: We are happy to help." }
  ]
}
