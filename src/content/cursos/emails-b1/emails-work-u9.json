      "block_id": "B2",
      "title": "Grammar: Present Perfect for Updates",
      "duration_minutes": 25,
      "content": [
        {
          "interaction_id": "u9_g1",
          "type": "transformation",
          "prompt_es": "Present Perfect (have + past participle) para confirmar recepción:",
          "stimulus_en": "I ________ (recibir) your email regarding the new project.",
          "correct_answer": "have received",
          "mastery_tag": "grammar"
        },
        {
          "interaction_id": "u9_g2",
          "type": "transformation",
          "prompt_es": "Uso de 'just' para acciones muy recientes:",
          "stimulus_en": "We have ________ (acabar de) finalized the contract.",
          "correct_answer": "just",
          "mastery_tag": "grammar"
        },
        {
          "interaction_id": "u9_g3",
          "type": "transformation",
          "prompt_es": "Uso de 'already' para algo hecho antes de lo esperado:",
          "stimulus_en": "I have ________ (ya) sent the confirmation link.",
          "correct_answer": "already",
          "mastery_tag": "grammar"
        },
        {
          "interaction_id": "u9_g4",
          "type": "transformation",
          "prompt_es": "Uso de 'yet' en preguntas o negaciones:",
          "stimulus_en": "Has the payment been processed ________ (todavía/ya)?",
          "correct_answer": "yet",
          "mastery_tag": "grammar"
        },
        {
          "interaction_id": "u9_g5",
          "type": "transformation",
          "prompt_es": "Present Perfect con 'so far' (hasta ahora):",
          "stimulus_en": "We ________ (tener) five confirmations so far.",
          "correct_answer": "have had",
          "mastery_tag": "grammar"
        },
        {
          "interaction_id": "u9_g6",
          "type": "transformation",
          "prompt_es": "Present Perfect con 'since' (desde):",
          "stimulus_en": "The status ________ (ser) 'pending' since Monday.",
          "correct_answer": "has been",
          "mastery_tag": "grammar"
        },
        {
          "interaction_id": "u9_g7",
          "type": "transformation",
          "prompt_es": "Present Perfect Passive para procesos:",
          "stimulus_en": "The files ________ (ser subidos) to the folder.",
          "correct_answer": "have been uploaded",
          "mastery_tag": "grammar"
        },
        {
          "interaction_id": "u9_g8",
          "type": "transformation",
          "prompt_es": "Contracción de 'I have':",
          "stimulus_en": "________ (I have) checked the figures and they look correct.",
