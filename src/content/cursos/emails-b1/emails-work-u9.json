      "block_id": "B3",
      "title": "Email Analysis: Clarifying Details",
      "duration_minutes": 30,
      "content": [
        {
          "interaction_id": "u9_r1",
          "type": "multiple_choice",
          "prompt_es": "Analiza: 'This is to acknowledge receipt of your application.' ¿Cuál es el propósito?",
          "options": [
            { "id": "o1", "text": "Confirmar que han recibido la solicitud" },
            { "id": "o2", "text": "Aceptar el trabajo directamente" },
            { "id": "o3", "text": "Pedir más documentos" }
          ],
          "correct_answer": "o1",
          "mastery_tag": "reading"
        },
        {
          "interaction_id": "u9_r2",
          "type": "multiple_choice",
          "prompt_es": "¿Qué significa 'to reiterate'?",
          "options": [
            { "id": "o1", "text": "Repetir / Volver a decir algo para enfatizar" },
            { "id": "o2", "text": "Cambiar de opinión" },
            { "id": "o3", "text": "Cancelar una cita" }
          ],
          "correct_answer": "o1",
          "mastery_tag": "reading"
        },
        {
          "interaction_id": "u9_r3",
          "type": "multiple_choice",
          "prompt_es": "Si un email dice 'Please find our agreement attached', debes:",
          "options": [
            { "id": "o1", "text": "Ver el archivo adjunto con el acuerdo" },
            { "id": "o2", "text": "Buscar un acuerdo en tu oficina" },
            { "id": "o3", "text": "Ignorar el mensaje" }
          ],
          "correct_answer": "o1",
          "mastery_tag": "reading"
        },
        {
          "interaction_id": "u9_r4",
          "type": "multiple_choice",
          "prompt_es": "¿Qué significa 'to be on the same page'?",
